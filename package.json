{
  "name": "@juxsta/wger-mcp",
  "version": "1.1.1",
  "description": "MCP server for wger workout and fitness API - enables AI assistants to search exercises and manage workout routines",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "wger-mcp": "dist/index.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "docs/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "type-check": "tsc --noEmit",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint && npm run type-check"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "wger",
    "fitness",
    "workout",
    "exercise",
    "ai",
    "claude",
    "health",
    "training",
    "gym"
  ],
  "author": "wger MCP Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Juxsta/wger-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/Juxsta/wger-mcp/issues"
  },
  "homepage": "https://github.com/Juxsta/wger-mcp#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "axios": "^1.6.0",
    "dotenv": "^16.3.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "msw": "^1.3.2",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.2.0"
  }
}
